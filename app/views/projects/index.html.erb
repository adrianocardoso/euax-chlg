<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span>Projetos</span>
      <%= link_to new_project_path, class: 'btn btn-primary' do %>Novo Projeto<% end %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card mb-3">
          <div class="card-body">
            <span class="badge alert-<%= project.badge_color%>">
              <%= project.status %> 
            </span>
            <span class="text-secondary">
              <small><%= project.percent_complete%>% conclu√≠do
              (<%= project.total_complete %>/<% project.total_tasks %> tarefas)
              - <%= project.created_at.strftime('%B %d, %Y') %>
              </small>
              
            </span>
            <h5 class="card-title text-dark"><b><%= project.name %></b></h5>
            <p class="text-secondary"><%= project.description %></p>

          </div>
        </div>
      <% end %>
    <% end %>    
  </div>
</div>
